# ===========================================
# PRODUCTION ENVIRONMENT CONFIGURATION
# ===========================================
# Copy this file to backend/.env for production

# ===========================================
# DATABASE CONFIGURATION
# ===========================================
MONGODB_URI=mongodb+srv://your-production-mongodb-connection-string

# ===========================================
# REDIS CONFIGURATION
# ===========================================
REDIS_URL=redis://your-production-redis-url:6379
REDIS_HOST=your-production-redis-host
REDIS_PORT=6379
REDIS_PASSWORD=your-production-redis-password

# ===========================================
# JWT AUTHENTICATION
# ===========================================
JWT_SECRET=your-super-secure-production-jwt-secret-key-here-make-it-very-long-and-random
JWT_EXPIRE=7d

# ===========================================
# OPENAI API CONFIGURATION
# ===========================================
OPENAI_API_KEY=your-production-openai-api-key

# ===========================================
# WHATSAPP CONFIGURATION
# ===========================================
WHATSAPP_SESSION_PATH=/app/sessions

# ===========================================
# SERVER CONFIGURATION
# ===========================================
PORT=5000
NODE_ENV=production
HOST=0.0.0.0

# ===========================================
# FRONTEND CONFIGURATION
# ===========================================
FRONTEND_URL=https://your-production-domain.com

# ===========================================
# SECURITY
# ===========================================
ENCRYPTION_KEY=your-32-character-production-encryption-key
SESSION_SECRET=your-production-session-secret-key

# ===========================================
# RATE LIMITING
# ===========================================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ===========================================
# FILE UPLOAD
# ===========================================
MAX_FILE_SIZE=5242880
ALLOWED_FILE_TYPES=.xlsx,.xls,.csv
UPLOAD_PATH=/app/uploads

# ===========================================
# FEATURES
# ===========================================
ENABLE_AI_ANALYSIS=true
ENABLE_MESSAGE_VARIATIONS=true
ENABLE_BULK_UPLOAD=true
ENABLE_ANALYTICS=true
MOCK_WHATSAPP=false

# ===========================================
# DEBUG
# ===========================================
DEBUG=false
LOG_LEVEL=error
