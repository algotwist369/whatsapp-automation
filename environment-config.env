# ===========================================
# WHATSAPP BULK MESSENGER - ENVIRONMENT CONFIG
# ===========================================
# Copy this file to .env and update the values

# ===========================================
# DATABASE CONFIGURATION
# ===========================================
# MongoDB Connection String
# For local development:
MONGODB_URI=mongodb://localhost:27017/whatsapp-bulk-messaging

# For MongoDB Atlas (cloud):
# MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/whatsapp-bulk-messaging?retryWrites=true&w=majority

# ===========================================
# REDIS CONFIGURATION
# ===========================================
# Redis Connection for caching and message queues
REDIS_URL=redis://localhost:6379

# Redis configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# ===========================================
# JWT AUTHENTICATION
# ===========================================
# JWT Secret Key - Generate a strong random string
# Generate with: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET=your-super-secret-jwt-key-here-make-it-very-long-and-random-123456789

# JWT Token Expiration Time
JWT_EXPIRE=7d

# ===========================================
# OPENAI API CONFIGURATION
# ===========================================
# Get your API key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-your-openai-api-key-here

# OpenAI Model Configuration
OPENAI_MODEL=gpt-4
OPENAI_MAX_TOKENS=1000
OPENAI_TEMPERATURE=0.7

# ===========================================
# WHATSAPP CONFIGURATION
# ===========================================
# Directory to store WhatsApp session files
WHATSAPP_SESSION_PATH=./sessions

# WhatsApp Browser Configuration
WHATSAPP_BROWSER_NAME=WhatsApp Bulk Messenger
WHATSAPP_BROWSER_VERSION=1.0.0

# ===========================================
# SERVER CONFIGURATION
# ===========================================
# Server Port
PORT=5000

# Environment
NODE_ENV=development

# Server Host
HOST=localhost

# CORS Origin
CORS_ORIGIN=http://localhost:3000

# ===========================================
# FRONTEND CONFIGURATION
# ===========================================
# Frontend URL for API calls
NEXT_PUBLIC_API_URL=http://localhost:5000/api

# Frontend URL for WebSocket connections
NEXT_PUBLIC_WS_URL=http://localhost:5000

# ===========================================
# FILE UPLOAD CONFIGURATION
# ===========================================
# Maximum file size for Excel uploads (5MB)
MAX_FILE_SIZE=5242880

# Allowed file types
ALLOWED_FILE_TYPES=.xlsx,.xls,.csv

# Upload directory
UPLOAD_PATH=./uploads

# ===========================================
# RATE LIMITING
# ===========================================
# API Rate limiting (15 minutes window, 100 requests)
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# WhatsApp message delays (1-3 seconds)
WHATSAPP_MESSAGE_DELAY_MIN=1000
WHATSAPP_MESSAGE_DELAY_MAX=3000

# ===========================================
# SECURITY CONFIGURATION
# ===========================================
# Encryption key for sensitive data (32 characters)
ENCRYPTION_KEY=your-32-character-encryption-key-here

# Session secret
SESSION_SECRET=your-session-secret-key-here

# ===========================================
# FEATURE FLAGS
# ===========================================
# Enable/disable features
ENABLE_AI_ANALYSIS=true
ENABLE_MESSAGE_VARIATIONS=true
ENABLE_BULK_UPLOAD=true
ENABLE_ANALYTICS=true

# Mock WhatsApp for testing
MOCK_WHATSAPP=false

# ===========================================
# DEVELOPMENT CONFIGURATION
# ===========================================
# Enable debug mode
DEBUG=true

# Log level
LOG_LEVEL=info

# ===========================================
# APPLICATION INFO
# ===========================================
# Application details
APP_NAME=WhatsApp Bulk Messenger
APP_VERSION=1.0.0
SUPPORT_EMAIL=support@whatsappbulk.com
COMPANY_NAME=Your Company Name
